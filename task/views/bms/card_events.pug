extends ../layout

block content
  h1 Event booking 
  each item in events
      .card(style='width: auto').bg-dark
      .card-body.bg-light
        .div
          h5.card-title=item.name
          h6.card-subtitle.mb-2.text-muted=item.theatre
        a.card-link(href="/events/register/"+item.event_id, value=item.id) Register
      br